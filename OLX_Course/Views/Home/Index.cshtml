@using OLX_Course.Models
@model List<CategoryViewModel>

@{

    ViewBag.Title = "Home Page";
}

<div class="search_div">
    <h1 class="text-center" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; margin-top:30px">OLX - знайдеться все та навіть більше</h1>
    <input type="text" placeholder="Що шукаєте?" class="search_inp"/>
    <input type="button" value="Знайти" class="search_btn"/>
</div>

<div class="row_categoria">
    @foreach (var item in Model)
    {
    <div class="categ_box">
        <a href="@Url.Action("TovarsForCategories", "Home", new { item.Id })">
            <img class="photo" src="@item.Image" />
            <p>@item.Name</p>
        </a>
    </div>
    }
</div>